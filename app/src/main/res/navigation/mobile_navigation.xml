<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_login">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sebastianb.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categoria"
        android:name="com.sebastianb.myapplication.ui.categoria.CategoriaFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_categoria" />

    <fragment
        android:id="@+id/navigation_gastosrecientes"
        android:name="com.sebastianb.myapplication.ui.gastosrecientes.GastosrecientesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_gastosrecientes" />
    <fragment
        android:id="@+id/navigation_login"
        android:name="com.sebastianb.myapplication.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_navigation_login_to_navigation_singup"
            app:destination="@id/navigation_singup" />
        <action
            android:id="@+id/action_navigation_login_to_navigation_list"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_singup"
        android:name="com.sebastianb.myapplication.ui.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up"
        >
        <action
            android:id="@+id/action_navigation_singup_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>
    <fragment
        android:id="@+id/navigation_estadisticas"
        android:name="com.sebastianb.myapplication.ui.estadisticas.EstadisticasFragment"
        android:label="fragment_estadisticas"
        tools:layout="@layout/fragment_estadisticas" />
    <fragment
        android:id="@+id/navigation_cuenta"
        android:name="com.sebastianb.myapplication.ui.perfil.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" />
</navigation>